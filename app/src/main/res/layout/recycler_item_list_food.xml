<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_recycler_item_list_food"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBFBFB">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tittle_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:text="tittle"
        android:textColor="#222831"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/image_food"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:ems="10"
        android:text="description"
        app:layout_constraintStart_toEndOf="@+id/image_food"
        app:layout_constraintTop_toBottomOf="@+id/tittle_textview" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_food"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_btn" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pay"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="от 150 р"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="#FD3A69" />

    <View
        android:id="@+id/bottom_sheet_line"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="10dp"
        android:background="#3ED6D6D6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_food" />

</androidx.constraintlayout.widget.ConstraintLayout>